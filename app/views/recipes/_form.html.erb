<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :substance %><br>
    <%= f.collection_select :substance_id, Substance.all, :id, :name, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :cookie %><br>
    <%= f.collection_select :cookie_id, Cookie.all, :id, :name, include_blank: true %>
  </div>
  <div class="field">
    <%= f.label :quantity, "Quantity (g)" %><br>
    <%= f.number_field :quantity %>
  </div>
  <br><br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
